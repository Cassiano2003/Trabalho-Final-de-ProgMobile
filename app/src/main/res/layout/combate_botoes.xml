<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <TextView
            android:id="@+id/dialog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ATAQUE AKUMA NO MI"
            android:textSize="40dp"
            android:fontFamily="@font/one_piece_font"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:id="@+id/dialog_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Seus ataques de Akuma No Mi"
            android:gravity="center"
            android:textSize="30dp"
            android:fontFamily="@font/one_piece_font"
            android:textColor="@color/black"
            android:layout_marginTop="30dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/dialog_title"/>

        <Button
            android:id="@+id/ataque1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="nome ataque"
            android:visibility="gone"
            android:textSize="25dp"
            android:fontFamily="@font/one_piece_font"
            android:textColor="@color/white"
            android:backgroundTint="@color/cor2"            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/dialog_message"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <TextView
            android:id="@+id/descricao_ataque1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="25dp"
            android:fontFamily="@font/one_piece_font"
            android:textColor="@color/black"
            android:visibility="gone"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@id/ataque1"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <Button
            android:id="@+id/ataque2"
