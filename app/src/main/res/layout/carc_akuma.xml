<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/catalogo_akuma"
    tools:context=".Telas.CaracAkuma">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <TextView
            android:id="@+id/nome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:text="Nome do akuma"
            android:textAlignment="center"
            android:textSize="40dp"
            android:fontFamily="@font/one_piece_font"
            android:textColor="@color/cor"
            android:textStyle="bold"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tipo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:text="tipo akuma"
            android:textSize="25dp"
            android:fontFamily="@font/one_piece_font"
            android:textColor="@color/cor"
            android:layout_marginTop="5dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/traducao" />

        <TextView
            android:id="@+id/descricao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="descricao Akuma No Mi"
            android:textSize="25dp"
            android:fontFamily="@font/one_piece_font"
            android:textColor="@color/cor"
            android:layout_marginTop="5dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/usuarios" />

        <TextView
            android:id="@+id/traducao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="traducao"
            android:textAlignment="center"
            android:textSize="30dp"
            android:fontFamily="@font/one_piece_font"
            android:textColor="@color/cor"
            android:layout_marginTop="5dp"
            android:textStyle="italic"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/foto_fruta" />

        <TextView
            android:id="@+id/usuarios"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="usuarios da akuma"
            android:textSize="25dp"
            android:fontFamily="@font/one_piece_font"
            android:textColor="@color/cor"
            android:layout_marginTop="5dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tipo" />

        <ImageView
            android:id="@+id/foto_fruta"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/nome"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/ataques"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Todos os ataques: "
            android:textSize="22sp"
            android:textStyle="bold"
            android:visibility="invisible"
            android:layout_marginTop="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/descricao" />

        <LinearLayout
            android:id="@+id/ataquesakuma"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/ataques"
            app:layout_constraintLeft_toLeftOf="parent">
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
